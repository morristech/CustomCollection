<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/frame"
    android:layout_margin="3dp"
    android:minHeight="225dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/collection_item_imageview"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/collection_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/collection_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/collection_item_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".67"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/collection_item_reference_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight=".33"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/collection_item_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>