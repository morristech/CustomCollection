<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent_black_percent_50"
    android:gravity="center"
    android:padding="12dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/redcross"
            android:background="@android:color/transparent"
            android:layout_weight=".67"
            android:layout_gravity="center"
            android:layout_margin="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:id="@+id/dialog_yes_no_title"
            android:textColor="@color/red"
            android:layout_weight=".33"
            android:textSize="14sp"
            tools:text="Delete"
            android:layout_margin="4dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/dialog_yes_no_description"
        android:textColor="@color/white"
        android:layout_weight=".33"
        android:textSize="18sp"
        tools:text="Delete"
        android:layout_margin="4dp"
        />
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp">
        <Button
            android:id="@+id/dialog_yes_no_button_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/transparent_black_percent_25"
            android:layout_weight=".5"
            android:layout_margin="4dp"
            />
        <Button
            android:id="@+id/dialog_yes_no_button_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/transparent_black_percent_25"
            android:layout_weight=".5"
            android:layout_margin="4dp"
            />
        </LinearLayout>
</LinearLayout>